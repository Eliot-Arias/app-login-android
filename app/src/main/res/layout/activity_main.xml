<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="218dp"
        android:layout_height="152dp"
        android:fontFamily="@font/inknut_antiqua_light"
        android:gravity="center"
        android:text="INICIO DE SESIÓN"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/lblMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:id="@+id/lblMsg"
        android:layout_width="198dp"
        android:layout_height="108dp"
        android:layout_marginTop="252dp"
        android:fontFamily="@font/inknut_antiqua_light"
        android:gravity="center"
        android:text="Para Continuar inicie sesión o regístrese"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewRegistrarse"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="78dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/inknut_antiqua_light"
        android:hapticFeedbackEnabled="true"
        android:onClick="Registrarse"
        android:text="Registrarse"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewIniciarSesion"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="78dp"
        android:width="36dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/inknut_antiqua_light"
        android:onClick="IniciarSesion"
        android:text="Iniciar Sesión"
        android:textSize="12sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewRegistrarse"
        app:layout_constraintVertical_bias="0.085" />

</androidx.constraintlayout.widget.ConstraintLayout>